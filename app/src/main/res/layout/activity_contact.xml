<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.neelb.sampleapp.Contact">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Contact your Trusted Contacts"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/ContactFirst"
        app:layout_constraintLeft_toLeftOf="@+id/selectThirdContact"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="79dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="37dp"
        android:text="Here are Three of your Trusted Contacts"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/selectFirstContact"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/roundrect"
        android:text="Edit First Contact"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/selectSecondContact"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/roundrect"
        android:text="Edit Second Contact"
        app:layout_constraintLeft_toLeftOf="@+id/selectFirstContact"
        app:layout_constraintRight_toRightOf="@+id/selectFirstContact"
        app:layout_constraintTop_toBottomOf="@+id/selectFirstContact"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/selectThirdContact"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/roundrect"
        android:text="Edit Third Contact"
        app:layout_constraintLeft_toLeftOf="@+id/selectSecondContact"
        app:layout_constraintRight_toRightOf="@+id/selectSecondContact"
        app:layout_constraintTop_toBottomOf="@+id/selectSecondContact"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/ContactFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundrect"
        android:text="Contact First"
        app:layout_constraintBottom_toTopOf="@+id/contactSecond"
        app:layout_constraintLeft_toLeftOf="@+id/contactSecond"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="7dp" />

    <Button
        android:id="@+id/contactThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51dp"
        android:background="@drawable/roundrect"
        android:text="Contact Third"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/contactSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@drawable/roundrect"
        android:text="Contact Second"
        app:layout_constraintBottom_toTopOf="@+id/contactThird"
        app:layout_constraintLeft_toLeftOf="@+id/contactThird"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="-7dp" />

</android.support.constraint.ConstraintLayout>
