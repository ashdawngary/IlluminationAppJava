<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.neelb.sampleapp.MainScreenGood"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/good_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Illumination"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/TaskListButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginRight="116dp"
        android:layout_marginStart="116dp"
        android:background="@drawable/roundrect"
        android:fontFamily="sans-serif"
        android:text="Activities"
        android:textAllCaps="false"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/good_title" />

    <Button
        android:id="@+id/storyButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/roundrect"
        android:fontFamily="sans-serif"
        android:text="Stories"
        android:textAllCaps="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/musicButton"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/musicButton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/musicButton"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/musicButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/roundrect"
        android:fontFamily="sans-serif"
        android:text="Music"
        android:textAllCaps="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/TaskListButton"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/TaskListButton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/TaskListButton"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/animalVideosButton"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundrect"
        android:fontFamily="sans-serif"
        android:text="Animal Videos"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/good_deepbreathing"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/good_deepbreathing"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/roundrect"
        android:fontFamily="sans-serif"
        android:text="Breathing"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="@+id/storyButton"
        app:layout_constraintRight_toRightOf="@+id/storyButton"
        app:layout_constraintTop_toBottomOf="@+id/storyButton"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/feedbacktextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:text="Feedback"
        android:textColor="#000000"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/changeMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Change Mood"
        android:textColor="#000000"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/appinfobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:text="About"
        android:textColor="#000000"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp" />

</android.support.constraint.ConstraintLayout>
